# Demo environment for running the ERNEST UI without downloading LLM weights.
# Point the server at this file with `ENV_FILE=.env.mock python christophe.py --serve`.

# Flask session/secret management for local previews.
FLASK_APP=christophe.py
FLASK_ENV=development
ERNEST_SECRET_KEY=mock-secret-key

# Allow predictable demo authentication.
ERNEST_PASSPHRASE_WHITELIST="demo-passphrase"
ERNEST_PASSPHRASE_WHITELIST_ENABLED=true

# Route all LLM invocations through the offline replay store.
ERNEST_LLM_MODE=mock
ERNEST_LLM_REPLAY_PATH=mock/mock_llm_responses.json

# Optional: store project uploads inside the repository while demoing the UI.
ERNEST_STORAGE_ROOT=./tmp
